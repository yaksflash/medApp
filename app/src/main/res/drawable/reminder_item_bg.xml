<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Цвет фона карточки -->
    <solid android:color="#FFFFFF"/>

    <!-- Скругление углов -->
    <corners android:radius="12dp"/>

    <!-- Паддинг/отступы внутри можно задавать в TextView, здесь только внешнее оформление -->

    <!-- Тень для Lollipop+ -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>

    <!-- Опционально можно добавить обводку -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD"/>
</shape>
